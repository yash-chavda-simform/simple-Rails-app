<div class="container">
  <h3>Order List</h3>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Quantity</th>
        <th scope="col">Name</th>
      </tr>
    </thead>
    <% @orders.each do |order|%>
      <tr>
        <td><%= order.quantity %></td>
        <td><%= order.product_rendering.name.capitalize %></td>
    <%end%>
  </table>
  <%= link_to "Product List", product_renderings_path, class:"btn btn-primary" %>
  <%= link_to "Logout", destroy_user_rendering_session_path	,data: {turbo_method: :delete }, class:"btn btn-primary" %>
</div>
