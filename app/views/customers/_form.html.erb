<%= form_with model: @customer do |form| %>
  <div>
    <%= form.label :FirstName,class:"col-sm-2 col-form-label" %>
    <%= form.text_field :first_name , class:"form-control"%>
  </div>
  <div>
    <%= form.label :LastName, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :last_name, class:"form-control" %>
  </div>
  <div>
    <%= form.label :email, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :email, class:"form-control" %>
    <% @customer.errors.full_messages_for(:email).each do |message| %>
      <p class="text-danger">
        <%= message %>
      </p>
    <% end %>
  </div>
  <div>
    <%= form.label :phone_no, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :phone_no, class:"form-control" %>
  </div>
  <br>
  <div>
    <%= form.submit "click",class:"btn btn-primary" %>
  </div>
<%end%>
