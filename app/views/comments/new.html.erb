<h1>Add Comment</h1>
<%= form_with model: @comment do |form| %>
  <div>
    <%= form.label :Comment %><br>
    <%= form.text_area :content %>
  </div>
  <%= form.hidden_field :user_id, value: session[:user_id]  %>
  <%= form.hidden_field :event_id, value: session[:event_id]  %>
  <div>
    <%= form.submit %>
  </div>
<% end %>
