<!DOCTYPE html>
<html lang="en">
  <body>
    <div class="container">
      <h3>Student List</h3>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Firstname</th>
            <th scope="col">LastName</th>
            <th scope="col">Department</th>
            <th scope="col">Birthdate</th>
            <th scope="col">Terms And Conditions</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.department %></td>
            <td><%= student.birth_date %></td>
            <td><%= student.term_and_condition %></td>
          </td>
          <td><%= link_to "Edit", edit_student_path(student), class:"btn btn-primary"%></td>
          <td><%= link_to "Delete", student_path(student), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      }, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to "Add Student", new_student_path, class:"btn btn-primary" %>
  </div>
</body>
</html>
