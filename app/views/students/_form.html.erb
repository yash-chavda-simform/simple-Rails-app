<%= form_with model: @student do |form| %>
  <div>
    <%= form.label :first_name, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :first_name, class:"form-control" %>
    <%= @student.errors.messages_for(:first_name).first %>
      
  </div><br>

  <div>
    <%= form.label :last_name, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :last_name, class:"form-control" %>
    <%= @student.errors.messages_for(:last_name).first %>
  </div><br>

  <div>
    <%= form.label :department, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :department, class:"form-control" %>
    <%= @student.errors.messages_for(:department).first %> 
  </div><br>

  <div>
    <%= form.label :birth_date, class:"col-sm-2 col-form-label" %>
    <%= form.date_field :birth_date%>
    <%= @student.errors.messages_for(:birth_date).first %>
  </div><br>

  <div>
    <%= form.check_box :term_and_condition%>
    <%= form.label :term_and_condition, class:"col-sm-2 col-form-label" %>
    <%= @student.errors.messages_for(:term_and_condition).first %>
  </div><br>

  <div>
    <%= form.submit "click",class:"btn btn-primary" %>
  </div>
<% end %>
