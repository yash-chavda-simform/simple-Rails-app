<div class="container">
  <h1>New Comment</h1>
  <%= form_with model: @comment, url:post_comments_path do |form| %>
    <%= form.label :comment, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :comment, class:"form-control" %><br>
    <%= form.hidden_field :rails_user_id, :value => current_user.id %>
    <%= form.hidden_field :post_id, :value => params[:post_id] %>
    <%= form.submit class:"btn btn-primary" %>
  <% end %>
</div>