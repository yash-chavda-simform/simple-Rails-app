<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :product_name,class:"col-sm-2 col-form-label" %>
    <%= form.text_field :product_name , class:"form-control" %>
    <%= @product.errors.full_messages_for(:product_name).first %>
  </div>
  <div>
    <%= form.label :description, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :description , class:"form-control" %>
    <%= @product.errors.full_messages_for(:description).first %>
  </div>
  <div>
    <%= form.label :price, class:"col-sm-2 col-form-label" %>
    <%= form.text_field :price , class:"form-control" %>
    <%= @product.errors.full_messages_for(:price).first %>
  </div>
  <br>
  <div>
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
