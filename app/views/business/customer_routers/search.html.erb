<!DOCTYPE html>
<html lang="en">
  <body>
    <div class="container">
      <%= form_with(url: search_business_customer_routers_path, method: 'get') do |form| %>
        <%= form.label :search, "Search For Customer" %>
        <%= form.text_field :search %>
        <%= form.submit "Search" %>
      <% end %>
      <h3>Customer List</h3>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.email %></td>
          </tr>
        <%end%>
      </table>
      <%= link_to "Back", business_customer_routers_path, class:"btn btn-primary" %>
    </div>
  </body>
</html>
