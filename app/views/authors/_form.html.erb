<%= form_with model: @author do |form| %>
  <div>
    <%= form.label :FirstName,class:"col-sm-2 col-form-label" %><br>
    <%= form.text_field :first_name , class:"form-control"%>
    <% @author.errors.full_messages_for(:first_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :LastName, class:"col-sm-2 col-form-label" %><br>
    <%= form.text_field :last_name, class:"form-control" %>
    <% @author.errors.full_messages_for(:last_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :DateOfBirth, class:"col-sm-2 col-form-label" %><br>
    <%= form.text_field :dob, class:"form-control" %>
    <% @author.errors.full_messages_for(:dob).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :Email, class:"col-sm-2 col-form-label" %><br>
    <%= form.text_field :email, class:"form-control" %>
    <% @author.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.submit "click",class:"btn btn-primary" %>
  </div>
<%end%>
